<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="40sp"/>


    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Clear"
        android:text="AC"
        android:textSize="25sp"
        android:layout_below="@id/editText"

        />

    <Button
        android:id="@+id/Backspace"
        android:layout_toRightOf="@id/Clear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText"
        android:text="B"
        android:textSize="25sp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Percent"
        android:layout_toRightOf="@id/Backspace"
        android:text="%"
        android:textSize="25sp"
        android:layout_below="@+id/editText" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Divide"
        android:layout_toRightOf="@id/Percent"
        android:text="/"
        android:textSize="25sp"
        android:layout_below="@+id/editText" />

    <Button
        android:id="@+id/nine"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Clear"
        android:text="9"
        android:textSize="25sp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Backspace"
        android:layout_toRightOf="@id/Clear"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Percent"
        android:layout_toRightOf="@id/Backspace"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Multiply"
        android:layout_toRightOf="@id/Percent"
        android:text="*"
        android:textSize="25sp"
        android:layout_below="@+id/Divide" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/six"
        android:text="6"
        android:textSize="25sp"
        android:layout_below="@+id/nine" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/five"
        android:layout_toRightOf="@id/Clear"
        android:text="5"
        android:textSize="25sp"
        android:layout_below="@+id/eight"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/four"
        android:layout_toRightOf="@id/Backspace"
        android:text="4"
        android:textSize="25sp"
        android:layout_below="@+id/seven" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/Subtract"
        android:layout_toRightOf="@id/Percent"
        android:text="-"
        android:textSize="25sp"
        android:layout_below="@+id/Multiply" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/three"
        android:text="3"
        android:textSize="25sp"
        android:layout_below="@+id/six" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/two"
        android:text="2"
        android:textSize="25sp"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@id/Clear"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/one"
        android:text="1"
        android:textSize="25sp"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@id/Backspace"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/plus"
        android:text="+"
        android:textSize="25sp"
        android:layout_below="@+id/Subtract"
        android:layout_toRightOf="@id/Percent"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/zero"
        android:text="0"
        android:textSize="25sp"
        android:layout_below="@+id/one" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/dot"
        android:text="."
        android:textSize="25sp"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@id/Clear"/>

    <Button
        android:layout_width="176dp"
        android:layout_height="90dp"
        android:id="@+id/Equal"
        android:text="="
        android:textSize="25sp"
        android:layout_below="@+id/three"
        android:layout_toRightOf="@id/Backspace"/>


</RelativeLayout>